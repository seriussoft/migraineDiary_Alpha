<!DOCTYPE html>
<html lang="en">
    <head>
      <meta charset="utf-8" />
      <title>@ViewBag.Title - SeriusSoft Migraine Diary</title>
      <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
      <meta name="viewport" content="width=device-width" />

      @Styles.Render("~/bundles/Content/css")
	  @Styles.Render("~/bundles/ContentThemes/chosen")
	  @Styles.Render("~/bundles/kendoContent")
      
	  @Styles.Render("~/bundles/less")
	  @Scripts.Render("http://code.jquery.com/jquery-1.8.3.min.js")
	  @Scripts.Render("~/Content/themes/chosen/chosen.jquery.min.js")
      @Scripts.Render("~/bundles/jqueryui");
      @Scripts.Render("~/bundles/jqueryval")
      @Scripts.Render("~/bundles/modernizr")
	  @*@Scripts.Render("http://code.jquery.com/jquery-1.8.3.min.js")
	  @Scripts.Render("~/Content/themes/chosen/chosen.jquery.min.js")*@
	  @Scripts.Render("~/bundles/scripts/kendo")
      
      @*Do not use this because it makes the site look really trashy!*@
	  @*@Scripts.Render("~/bundles/scripts/twitter-bootstrap")*@
      
      @*@RenderSection("scripts", required: false)*@

</head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("SeriusSoft Migraine Diary", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
														<li class="HoverList">
															<span style="display:none">Dictionary</span>
															<ul>
																<li>@Html.ActionLink("Migraines", "Index", "Migraines")</li>
																<li><i>@Html.ActionLink("Triggers", "Index", "Triggers")</i></li>
																@*<li>@Html.ActionLink("Triggers", "Index", "Triggers")</li>*@
																<li>@Html.ActionLink("Medications", "Index", "Medications")</li>
																<li>@Html.ActionLink("Ingredients", "Index", "Ingredients")</li>
																<li>@Html.ActionLink("Dosages", "Index", "Dosages")</li>
																<li>@Html.ActionLink("Units", "Index", "UnitOfMeasurements")</li>
																<li>@Html.ActionLink("Symptoms", "Index", "Symptoms")</li>
															</ul>
														</li>
                            @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                            @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; 2013 - SeriusSoft</p>
                </div>
            </div>
        </footer>

      
			 @* Down here so that we don't have to have a document.loaded event to trigger these...*@
                @RenderSection("scripts", required: false)
                
    </body>
</html>

